{
  "name": "dictionary",
  "version": "1.0.0",
  "description": "Dictionary",
  "scripts": {
    "quiz:selection":  "npm run ts-node-register ./packages/quiz/bin/index.ts quiz:selection",
    "quiz:exam":  "npm run ts-node-register ./packages/quiz/bin/index.ts quiz:exam",
    "database:test:init": "npm run ts-node-register ./packages/database/bin/index.ts database:test:init",
    "ts-node-register": "npx ts-node -r tsconfig-paths/register -r ./packages/env/register",
    "test": "npx jest",
    "lint": "npx tslint 'packages/**/*.[jt]s?(x)'",
    "lint:fix": "npm run lint -- --fix",
    "pre-commit": "npm run lint && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nlapshin/dictionary"
  },
  "author": {
    "name": "Nikolay Lapshin",
    "email": "nlapshin1989@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/nlapshin/dictionary#readme",
  "dependencies": {
    "@types/mongodb": "^3.5.27",
    "colors": "^1.4.0",
    "commander": "^6.1.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20",
    "mongodb": "^3.6.2",
    "p-iteration": "^1.1.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  }
}
